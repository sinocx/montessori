<div class="panel-group" id="accordion">
  <div class="panel closed">
    <div class="card-header" id="c-<%= @child_no_valid.id %>">
      <h5 class="mb-0">
        <button class="btn btn-block btn-tabs collapsed" data-toggle="collapse" data-parent="#accordion" data-target="#collapse<%= @child_no_valid.id %>"></button>
      </h5>
    </div>

    <div id="collapse<%= @child_no_valid.id %>" class="panel-collapse collapse">
      <div class="card-body text-center">
        <div id="child-<%= @child_no_valid %>">
         <%= simple_form_for [@child_no_valid], remote: true, url: subscription_child_no_valid_path(@subscription, @child_no_valid), method: :patch do |f| %>
           <h2><%= @child_no_valid.first_name %></h2>
           <hr>
           <div class="col-xs-12 col-sm-6">
             <%= f.input :first_name, label: "Prénom", required: true %>
           </div>
           <div class="col-xs-12 col-sm-6">
             <%= f.input :last_name, label: "Nom", required: true %>
           </div>
           <div class="col-xs-12">
             <%= f.input :gender, as: :radio_buttons, collection: [['Féminin','Fille'], ['Masculin','Garçon']], label: "Sexe", label_method: :second, value_method: :first, required: true %>
             <div class="child-gender btn-group btn-group-justified">
               <div class="btn-group">
                 <button id="fille" class="btn btn-primary" type="button">Fille</button>
               </div>
               <div class="btn-group">
                 <button id="garcon" class="btn btn-primary" type="button">Garçon</button>
               </div>
             </div>
           </div>
           <div class="col-xs-12">
             <%= f.input :birth_date,
                         as: :date,
                         start_year: Date.today.year - 12,
                         end_year: Date.today.year - 1,
                         order: [:day, :month, :year],
                         label: "Date de naissance",
                         required: true %>
             <%= f.input :nationality, label: "Nationalité", required: true %>
           </div>
           <div class="col-xs-12 col-sm-6">
             <%= f.input :first_lang, label: "Langue maternelle", required: true %>
           </div>
           <div class="col-xs-12 col-sm-6">
             <%= f.input :snd_lang, label: "Seconde langue" %>
           </div>
           <div class="col-xs-12">
             <%= f.input :start_date,
                         as: :date,
                         start_year: Date.today.year,
                         end_year: Date.today.year + 2,
                         order: [:day, :month, :year],
                         label: "Date souhaitée pour le début de la scolarité :",
                         required: true %>
             <%= f.input :montessori_before,
                       as: :radio_buttons,
                       collection: [[true,'Oui'], [false,'Non']],
                       label: "Votre enfant a-t-il déjà été scolarisé dans une école Montessori ?",
                       label_method: :second,
                       value_method: :first,
                       required: true %>
             <div class="montessori-before btn-group btn-group-justified">
               <div class="btn-group">
                 <button id="mb-oui" class="btn btn-primary" type="button">Oui</button>
               </div>
               <div class="btn-group">
                 <button id="mb-non" class="btn btn-primary" type="button">Non</button>
               </div>
             </div>
           </div>
           <div class="col-xs-12">
             <%= f.input :montessori_name, label: "Laquelle ?", wrapper_html: { id: 'montessori-name', class: 'hidden' } %>
             <%= f.input :comment, label: "Choses à savoir sur votre enfant" %>
           </div>

           <div class="col-xs-12 col-sm-12" style="margin-top: 15px;">
             <%= f.button :submit, "Editer", class: "btn-success btn-block" %>
           </div>
         <% end %>
        </div>
      </div>
    </div>
    <button class="card-bottom btn-tabs collapsed" data-toggle="collapse" data-parent="#accordion" data-target="#collapse<%= @child_no_valid.id %>"></button>
    <h3 class="tab-title">Info <%= @child_no_valid.first_name %></h3>
  </div>
</div>
